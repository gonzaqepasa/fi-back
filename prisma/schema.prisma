// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Información personal
  // Se genera a travez de inputs
  id          Int     @id @default(autoincrement())
  email       String?
  name        String?
  phone       String?
  description String?

  // Información de actividad que realiza y modalidad
  // Se genera con el select agarrando información de los estados
  active     Boolean
  activity   Activity @relation(fields: [activityId], references: [id])
  activityId Int
  // Información de pago
  // Se genera de forma automatica
  calendar   Calendar @relation(fields: [calendarId], references: [id])
  calendarId Int      @unique
}

model Activity {
  id Int @id @default(autoincrement())

  // información de actividad
  nameActivity String
  modality     String
  price        Int
  
  //Todos los usuarios que tienen esta actividad
  User         User[]
}

model Calendar {
  id Int @id @default(autoincrement())

  // Usuario -> User
  User User?

  // Meses
  months Month[]
  // enero      String
  // febrero    String
  // marzo      String
  // abril      String
  // mayo       String
  // junio      String
  // julio      String
  // agosto     String
  // septiembre String
  // noviembre  String
  // diciembre  String
}

model Month {
  id Int @id @default(autoincrement())

  // Información del mes 
  monthNum  Int
  monthName String
  addData   String
  addAdmin  String
  comment   String?

  // Información del pago del mes
  isPay     Boolean
  mothodPay String
  pricePay  Int

  // A que calendario pertenece
  calendar Calendar @relation(fields: [userId], references: [id])
  userId   Int
}
